{
  "name": "@acfatah/malaysia-postcodes-data",
  "type": "module",
  "version": "2.2.1",
  "private": false,
  "description": "Script to generate flattened JSON objects list of Malaysia postcodes data, sorted by the postcode number.",
  "author": "Achmad F. Ibrahim <acfatah@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/acfatah/malaysia-postcodes-data#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acfatah/malaysia-postcodes-data.git"
  },
  "bugs": {
    "url": "https://github.com/acfatah/malaysia-postcodes-data/issues"
  },
  "keywords": [
    "malaysia",
    "postcodes",
    "postal codes",
    "postcode"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun install && bun scripts/build.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "bunx --bun eslint",
    "lint:staged": "bunx --bun eslint --pass-on-no-patterns --no-warn-ignored $(git diff --relative --cached --name-only --diff-filter=d)",
    "lint:inspect": "eslint --inspect-config",
    "format": "bunx --bun eslint . --fix",
    "precommit": "bun lint:staged",
    "release": "bunx --bun bumpp --execute=\"bun install\""
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@acfatah/eslint-preset": "^1.3.3",
    "@types/bun": "^1.3.5",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun precommit"
  }
}
